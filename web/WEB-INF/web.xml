<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CadCliente</servlet-name>
        <servlet-class>servlets.CadCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutosServlet</servlet-name>
        <servlet-class>servlets.ProdutosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Autentica</servlet-name>
        <servlet-class>servlets.Autentica</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificaAutenticado</servlet-name>
        <servlet-class>servlets.VerificaAutenticado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logot</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sair</servlet-name>
        <servlet-class>servlets.Sair</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InserirItemC</servlet-name>
        <servlet-class>servlets.InserirItemC</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadCliente</servlet-name>
        <url-pattern>/CadCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutosServlet</servlet-name>
        <url-pattern>/ProdutosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Autentica</servlet-name>
        <url-pattern>/Autentica</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificaAutenticado</servlet-name>
        <url-pattern>/VerificaAutenticado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sair</servlet-name>
        <url-pattern>/Sair</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InserirItemC</servlet-name>
        <url-pattern>/InserirItemC</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
